@model Ping.Server.Controllers.EmailSentViewModel

@{
    ViewData["Title"] = "Check Your Email";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ping</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9fafb;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .container {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        h1 {
            font-size: 1.875rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: #111827;
        }

        .email {
            font-weight: 600;
            color: #111827;
        }

        p {
            color: #6b7280;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }

        .back-link {
            display: inline-block;
            color: #3b82f6;
            text-decoration: none;
            font-size: 0.875rem;
            font-weight: 500;
        }

            .back-link:hover {
                text-decoration: underline;
            }

        .success-icon {
            font-size: 3rem;
            color: #10b981;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="success-icon">✉️</div>
        <h1>Check Your Email</h1>
        <p>
            We've sent a magic link to <span class="email">@Model.Email</span>.
            Click the link in your email to sign in.
        </p>
        <p>
            Didn't receive the email? Check your spam folder or
            <a href="/auth/signin" class="back-link">try again</a>.
        </p>
    </div>
</body>
</html>